{
  "name": "mcp-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "MCP (Model Context Protocol) Server Management Tool - Efficiently manage and switch between different MCP server configurations for Claude Desktop and Cursor",
  "author": "Sangmo Koo <green0614@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on tcp:localhost:5173 && npm run electron\"",
    "electron-build": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -w portable --publish=never",
    "dist:linux": "npm run build && electron-builder -l AppImage --publish=never",
    "dist:mac": "npm run build && electron-builder -m zip --publish=never",
    "reset": "rmdir /s /q \"%APPDATA%\\mcp-manager\" 2>nul & npm run electron-dev",
    "clean": "rmdir /s /q dist 2>nul & rmdir /s /q dist-electron 2>nul & rmdir /s /q node_modules 2>nul & npm install"
  },
  "build": {
    "appId": "com.mcp.manager",
    "productName": "MCP Manager",
    "icon": "public/favicon.png",
    "asar": true,   
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "public/**/*"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "zip"
    },
    "win": {
      "target": "portable",
      "forceCodeSigning": false
    },
    "linux": {
      "target": "AppImage"
    },
    "portable": { 
      "artifactName": "MCP Manager.exe"
    }
  },
  "dependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/fs-extra": "^11.0.4",
    "bootstrap": "^5.3.8",
    "cross-env": "^10.0.0",
    "electron-store": "^10.1.0",
    "file-saver": "^2.0.5",
    "fs-extra": "^11.3.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-toastify": "^11.0.5",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
